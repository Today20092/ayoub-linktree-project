---
import Link from '../components/Link.astro'
import '../styles.css'
import { Image, Picture } from 'astro:assets'
import Ayoub from '../image/Ayoub.jpg'
import kofi from '../image/Ko-Fi.png'
import yt from '../image/youtube.png'
import cashapp from '../image/CashApp.png'
import venmo from '../image/Venmo.png'
import paypal from '../image/Paypal.png'
import contact from '../image/Contactcard.png'
import matrix from '../image/Matrix.png'
import tampashutter from '../image/Tampashutter.png'
import odysee from '../image/Odysee.png'
import { ViewTransitions } from 'astro:transitions'
import actionlens from '../image/ActionLens.png'
import patreon from '../image/Patreon.png'
import sms from '../image/SMS.svg'
import signal from '../image/signal.svg'
import abm from '../image/ABM.webp'
const siteUrl = 'https://www.ayoubabed.xyz/'
---

<!doctype html>
<html lang="en" class="box-border">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <title>Ayoub Abedrabbo</title>
    <meta
      name="description"
      content="Ayoub Abedrabbo is an event photographer in Tampa, Florida. Photos and videos for all budgets. Find all links, contact, and support options here."
    />

    <!-- Icons/branding -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- OG / Twitter -->
    <meta
      property="og:title"
      content="Ayoub Abedrabbo – Photographer & Videographer"
    />
    <meta
      property="og:description"
      content="Tampa-based event photographer & videographer. Book or support me here."
    />
    <meta property="og:image" content={Ayoub.src} />
    <meta property="og:type" content="profile" />
    <meta property="og:url" content={siteUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="canonical" href={siteUrl} />
    <meta name="robots" content="index,follow" />

    <!-- Inter font (optional). Consider self-hosting for max performance -->
    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="preload" href="https://rsms.me/inter/inter.css" as="style" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

    <!-- Font Awesome kit (consider replacing with local SVGs later) -->
    <script
      src="https://kit.fontawesome.com/e8d1b35a19.js"
      crossorigin="anonymous"
      defer
    ></script>

    <ViewTransitions />
  </head>

  <body
    class="mx-auto my-8 min-h-screen max-w-[90%] justify-center
           bg-gradient-to-t from-emerald-800 to-green-700 pb-2
           text-center text-lg subpixel-antialiased lg:max-w-screen-md"
  >
    <!-- Header / Avatar -->
    <div
      class="animate-float mx-auto size-40 overflow-hidden rounded-full drop-shadow-md"
    >
      <Image
        src={Ayoub}
        alt="Portrait of Ayoub Abedrabbo"
        class="h-44 w-full object-cover object-center drop-shadow-lg"
        decoding="async"
        loading="eager"
      />
    </div>

    <h1 class="my-4 text-2xl font-bold text-white drop-shadow-lg">
      Ayoub Abedrabbo
    </h1>
    <p class="mx-auto my-4 max-w-prose text-center text-white">
      I am a photographer/videographer. I also make videos about many topics
      like Islam, manifestation, and books that I’m reading.
    </p>

    <!-- Social icons -->
    <div
      class="my-4 flex flex-wrap items-center justify-center text-2xl text-white"
    >
      <a
        id="instagram"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Instagram: @ayoubabedrabbo"
        class="mx-2 rounded transition hover:scale-150 focus-visible:ring-2 focus-visible:ring-white/70"
        href="https://instagram.com/ayoubabedrabbo"
      >
        <i class="fa-brands fa-instagram" aria-hidden="true"></i>
      </a>
      <a
        id="discord"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Discord profile"
        class="mx-2 rounded transition hover:scale-150 focus-visible:ring-2 focus-visible:ring-white/70"
        href="https://discordapp.com/users/279467079990640641"
      >
        <i class="fa-brands fa-discord" aria-hidden="true"></i>
      </a>
      <a
        id="linkedin"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="LinkedIn"
        class="mx-2 rounded transition hover:scale-150 focus-visible:ring-2 focus-visible:ring-white/70"
        href="https://www.linkedin.com/in/ayoubabedrabbo/"
      >
        <i class="fa-brands fa-linkedin" aria-hidden="true"></i>
      </a>
      <a
        id="mastodon"
        target="_blank"
        rel="me noopener noreferrer"
        aria-label="Mastodon"
        class="mx-2 rounded transition hover:scale-150 focus-visible:ring-2 focus-visible:ring-white/70"
        href="https://mastodon.social/@ayoubabedrabbo"
      >
        <i class="fa-brands fa-mastodon" aria-hidden="true"></i>
      </a>
      <a
        id="github"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
        class="mx-2 rounded transition hover:scale-150 focus-visible:ring-2 focus-visible:ring-white/70"
        href="https://github.com/Today20092"
      >
        <i class="fa-brands fa-github" aria-hidden="true"></i>
      </a>
      <a
        id="telegram"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Telegram"
        class="mx-2 rounded transition hover:scale-150 focus-visible:ring-2 focus-visible:ring-white/70"
        href="https://t.me/AyoubAb1"
      >
        <i class="fa-brands fa-telegram" aria-hidden="true"></i>
      </a>
      <a
        id="youtube"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="YouTube channel"
        class="mx-2 rounded transition hover:scale-150 focus-visible:ring-2 focus-visible:ring-white/70"
        href="https://www.youtube.com/@ayoubthegreat"
      >
        <i class="fa-brands fa-youtube" aria-hidden="true"></i>
      </a>
      <a
        id="tiktok"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="TikTok"
        class="mx-2 rounded transition hover:scale-150 focus-visible:ring-2 focus-visible:ring-white/70"
        href="https://www.tiktok.com/@ayoubabedrabbo"
      >
        <i class="fa-brands fa-tiktok" aria-hidden="true"></i>
      </a>
    </div>

    <!-- Contact section -->
    <h2
      class="mb-4 mt-8 text-lg font-bold tracking-wide text-white drop-shadow-lg"
    >
      Contact me
    </h2>
    <Link
      linktxt="Download my contact card"
      bgcolor="bg-sky-500"
      link="https://www.ayoubabed.xyz/AyoubA-Contact-Card.vcf"
      linkcolor="text-white"
      id="contact"
      class="mx-auto w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={contact}
        alt="Contact Card logo"
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <Link
      linktxt="Message me on Matrix"
      bgcolor="bg-sky-600"
      link="https://matrix.to/#/@ayoubab:matrix.org"
      linkcolor="text-white"
      id="matrix"
      class="mx-auto mt-3 w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={matrix}
        alt="Matrix logo"
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <Link
      linktxt="Message me on Signal"
      bgcolor="bg-sky-700"
      link="https://signal.me/#eu/69JqyX9IFc7IdHHGVi0WbrS68tgkCS6duJSWkivyLk1av_6Vo2xEoLIvhn0duI7B"
      linkcolor="text-white"
      id="signal"
      class="mx-auto mt-3 w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={signal}
        alt="Signal logo"
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <Link
      linktxt="Send me a text"
      bgcolor="bg-sky-800"
      link="sms:+18134240606?body=Hello Ayoub from AlphaBravoMedia, It was nice to meet you."
      linkcolor="text-white"
      id="sms"
      class="mx-auto mt-3 w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={sms}
        alt=""
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <!-- Patreon -->
    <h2
      class="mb-4 mt-8 text-lg font-bold tracking-wide text-white drop-shadow-lg"
    >
      Patreon
    </h2>
    <Link
      linktxt="Join my community on Patreon"
      bgcolor="bg-neutral-50"
      link="https://patreon.com/AyoubAbedrabbo"
      linkcolor="text-black"
      id="patreon"
      class="mx-auto w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={patreon}
        alt="Patreon logo"
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <!-- YouTube -->
    <h2
      class="mb-4 mt-8 text-lg font-bold tracking-wide text-white drop-shadow-lg"
    >
      Watch on Youtube
    </h2>
    <Link
      linktxt="Subscribe to my Youtube Channel"
      bgcolor="bg-red-700"
      link="https://www.youtube.com/@ayoubthegreat"
      linkcolor="text-white"
      id="youtube-personal"
      class="mx-auto w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={yt}
        alt="YouTube logo"
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <Link
      linktxt="Visit AlphaBravoMedia Youtube Channel"
      bgcolor="bg-red-800"
      link="https://youtube.com/@alphabravomedia"
      linkcolor="text-white"
      id="youtube-alphabravomedia"
      class="mx-auto mt-3 w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={yt}
        alt="YouTube logo"
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <!-- Company -->
    <h2
      class="mb-4 mt-8 text-lg font-bold tracking-wide text-white drop-shadow-lg"
    >
      My video &amp; photo company
    </h2>
    <Link
      linktxt="AlphaBravoMedia Homepage"
      bgcolor="bg-orange-700"
      link="https://linktr.ee/AlphaBravoMedia"
      linkcolor="text-white"
      id="alphabravomedia"
      class="mx-auto w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={abm}
        alt="AlphaBravoMedia logo"
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <!-- Payments -->
    <h2
      class="mb-4 mt-8 text-lg font-bold tracking-wide text-white drop-shadow-lg"
    >
      Send me money on:
    </h2>

    <Link
      linktxt="CashApp"
      bgcolor="bg-green-700"
      link="https://cash.app/ayoubab1"
      linkcolor="text-white"
      id="cash-app"
      class="mx-auto w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={cashapp}
        alt="Cash App logo"
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <Link
      linktxt="Venmo"
      bgcolor="bg-green-600"
      link="https://venmo.com/u/Ayoub-Abedrabbo"
      linkcolor="text-white"
      id="venmo"
      class="mx-auto mt-3 w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={venmo}
        alt="Venmo logo"
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <Link
      linktxt="Paypal"
      bgcolor="bg-green-500"
      link="https://paypal.me/AyoubAbedrabbo"
      linkcolor="text-white"
      id="paypal"
      class="mx-auto mt-3 w-full max-w-[560px]"
    >
      <Image
        slot="icon"
        src={paypal}
        alt="PayPal logo"
        class="link-image h-5 w-5 object-contain"
        loading="lazy"
        decoding="async"
      />
    </Link>

    <!-- Footer -->
    <footer
      class="mt-auto w-full max-w-screen-md px-4 pb-2 pt-4 text-center text-sm text-white/70"
    >
      <p class="mb-0">&copy; 2025 Ayoub Abedrabbo. All rights reserved.</p>
      <p>
        Built with
        <a
          href="https://astro.build"
          target="_blank"
          rel="noopener"
          class="underline hover:text-white"
        >
          Astro
        </a>
        &amp;
        <a
          href="https://tailwindcss.com"
          target="_blank"
          rel="noopener"
          class="underline hover:text-white"
        >
          Tailwind CSS
        </a>.
      </p>
    </footer>

    <!-- Person JSON-LD (optional but helpful for SEO) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Ayoub Abedrabbo",
        "url": "https://www.ayoubabed.xyz/",
        "image": "{Ayoub.src}",
        "sameAs": [
          "https://instagram.com/ayoubabedrabbo",
          "https://www.youtube.com/@ayoubthegreat",
          "https://www.linkedin.com/in/ayoubabedrabbo/",
          "https://mastodon.social/@ayoubabedrabbo"
        ],
        "jobTitle": "Photographer & Videographer",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Tampa",
          "addressRegion": "FL"
        }
      }
    </script>
  </body>
</html>

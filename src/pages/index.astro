---
import '../styles.css'
import { Image } from 'astro:assets'

// Import the Icon component
import { Icon } from 'astro-icon/components'

import Link from '../components/Link.astro'
import Section from '../components/Section.astro'

// Images
import Ayoub from '../image/AyoubBayaan.jpg'
import abm from '../image/ABM.webp'

// Site Data
const siteUrl = 'https://www.ayoubabed.xyz/'
const ayoubImageUrl = Ayoub.src
const currentYear = new Date().getFullYear()

// Social Media Data Map
// FIX 1: Corrected names to remove the extra "fa-" prefix
const socialLinks = [
  {
    id: 'instagram',
    url: 'https://instagram.com/alphabravomedia',
    icon: 'fa-brands:instagram',
    label: 'Instagram: @AlphaBravoMedia'
  },
  {
    id: 'discord',
    url: 'https://discordapp.com/users/279467079990640641',
    icon: 'fa-brands:discord',
    label: 'Discord profile'
  },
  {
    id: 'linkedin',
    url: 'https://www.linkedin.com/in/ayoubabedrabbo/',
    icon: 'fa-brands:linkedin',
    label: 'LinkedIn'
  },
  {
    id: 'mastodon',
    url: 'https://mastodon.social/@ayoubabedrabbo',
    icon: 'fa-brands:mastodon',
    label: 'Mastodon',
    rel: 'me noopener noreferrer'
  },
  {
    id: 'github',
    url: 'https://github.com/Today20092',
    icon: 'fa-brands:github',
    label: 'GitHub'
  },
  {
    id: 'telegram',
    url: 'https://t.me/AyoubAb1',
    icon: 'fa-brands:telegram',
    label: 'Telegram'
  },
  {
    id: 'youtube',
    url: 'https://www.youtube.com/@ayoubthegreat',
    icon: 'fa-brands:youtube',
    label: 'YouTube channel'
  },
  {
    id: 'tiktok',
    url: 'https://www.tiktok.com/@ayoubabedrabbo',
    icon: 'fa-brands:tiktok',
    label: 'TikTok'
  },
  {
    id: 'substack',
    url: 'https://www.substack.com/@ayoubabedrabbo1',
    icon: 'simple-icons:substack',
    label: 'Substack'
  }
]
---

<!doctype html>
<html lang="en" class="box-border">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <title>Ayoub Abedrabbo</title>
    <meta
      name="description"
      content="Ayoub Abedrabbo is an event photographer and videographer in Tampa, Florida. Photos and videos for all budgets. Find all links, contact, and support options here."
    />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#12140e" />

    <meta
      property="og:title"
      content="Ayoub Abedrabbo â€“ Photographer & Videographer"
    />
    <meta
      property="og:description"
      content="Tampa-based event photographer & videographer. Book or support me here."
    />
    <meta property="og:image" content={ayoubImageUrl} />
    <meta property="og:type" content="profile" />
    <meta property="og:url" content={siteUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="canonical" href={siteUrl} />
    <meta name="robots" content="index,follow" />

    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="preload" href="https://rsms.me/inter/inter.css" as="style" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
  </head>

  <body
    class="mx-auto my-0 min-h-screen max-w-[90%] justify-center
           bg-surface pb-6 pt-10
           text-center text-lg subpixel-antialiased lg:max-w-screen-md"
  >
    <main>
    <div
      class="animate-float animate-fade-in-up mx-auto size-40 overflow-hidden rounded-full ring-4 ring-primary-container elevation-3"
    >
      <Image
        src={Ayoub}
        alt="Portrait of Ayoub Abedrabbo"
        class="h-44 w-full object-cover object-center"
        decoding="async"
        loading="eager"
      />
    </div>

    <h1 class="animate-fade-in-up delay-100 my-5 text-2xl font-bold text-on-surface">
      Ayoub Abedrabbo
    </h1>
    <p class="animate-fade-in-up delay-200 mx-auto my-5 max-w-prose text-center text-on-surface-variant">
      Digital Media Specialist.<br>I create educational
      content about media production/videography and support the Islamic community through
      local journalism.
    </p>

    <nav aria-label="Social media links">
      <div
        class="animate-fade-in-up delay-300 my-6 flex flex-wrap items-center justify-center gap-1 text-3xl text-on-surface"
      >
        {socialLinks.map((social) => (
          <a
            id={social.id}
            target="_blank"
            rel={social.rel || "noopener noreferrer"}
            aria-label={social.label}
            title={social.label}
            class="p-2.5 rounded-xl transition-all duration-200
                   hover:scale-110 hover:bg-surface-container-high
                   focus-visible:ring-2 focus-visible:ring-primary/70 focus-visible:outline-none"
            href={social.url}
          >
            <Icon name={social.icon} class="h-7 w-7" aria-hidden="true" />
          </a>
        ))}
      </div>
    </nav>

    <Section title="Contact me" class="animate-fade-in-up delay-400">
      <Link
        linktxt="Download my contact card"
        bgcolor="bg-contact-container"
        link="https://www.ayoubabed.xyz/AyoubA-Contact-Card.vcf"
        linkcolor="text-contact"
        id="contact"
      >
        <Icon
          slot="icon"
          name="fa-solid:id-card"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Message me on Matrix"
        bgcolor="bg-contact-container"
        link="https://matrix.to/#/@ayoubab:matrix.org"
        linkcolor="text-contact"
        id="matrix"
      >
        <Icon
          slot="icon"
          name="simple-icons:matrix"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Send me a text"
        bgcolor="bg-contact-container"
        link="sms:+18134240606?body=Hello Ayoub from AlphaBravoMedia, It was nice to meet you."
        linkcolor="text-contact"
        id="sms"
      >
        <Icon
          slot="icon"
          name="fa-solid:comment-dots"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Send me an email"
        bgcolor="bg-contact-container"
        link="mailto:Ayoub@AyoubAbed.xyz"
        linkcolor="text-contact"
        id="email"
      >
        <Icon
          slot="icon"
          name="fa-solid:envelope"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>
    </Section>

    <Section title="Watch on YouTube" class="animate-fade-in-up delay-400">
      <Link
        linktxt="Subscribe to my YouTube Channel"
        bgcolor="bg-youtube-container"
        link="https://www.youtube.com/@ayoubthegreat"
        linkcolor="text-youtube"
        id="youtube-personal"
      >
        <Icon
          slot="icon"
          name="fa-brands:youtube"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Visit AlphaBravoMedia YouTube"
        bgcolor="bg-youtube-container"
        link="https://youtube.com/@alphabravomedia"
        linkcolor="text-youtube"
        id="youtube-alphabravomedia"
      >
        <Icon
          slot="icon"
          name="fa-brands:youtube"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Visit Islamic Tampa TV YouTube"
        bgcolor="bg-youtube-container"
        link="https://www.youtube.com/@islamicTampaTV"
        linkcolor="text-youtube"
        id="youtube-islamic"
      >
        <Icon
          slot="icon"
          name="fa-brands:youtube"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>
    </Section>

    <Section
      title="My video & photo company"
      description="Event photography, videography, and media services for Tampa and beyond."
      class="animate-fade-in-up delay-400"
    >
      <Link
        linktxt="AlphaBravoMedia Homepage"
        bgcolor="bg-company-container"
        link="https://linktr.ee/AlphaBravoMedia"
        linkcolor="text-company"
        id="alphabravomedia"
      >
        <Icon
          slot="icon"
          name="fa-solid:camera"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>
    </Section>

    <Section title="Support My Work" class="animate-fade-in-up delay-400">
      <Link
        linktxt="CashApp"
        bgcolor="bg-support-container"
        link="https://cash.app/ayoubab1"
        linkcolor="text-support"
        id="cash-app"
      >
        <Icon
          slot="icon"
          name="simple-icons:cashapp"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Venmo"
        bgcolor="bg-support-container"
        link="https://venmo.com/u/Ayoub-Abedrabbo"
        linkcolor="text-support"
        id="venmo"
      >
        <Icon
          slot="icon"
          name="simple-icons:venmo"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Paypal"
        bgcolor="bg-support-container"
        link="https://paypal.me/AyoubAbedrabbo"
        linkcolor="text-support"
        id="paypal"
      >
        <Icon
          slot="icon"
          name="fa-brands:paypal"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>
    </Section>
    </main>

    <footer
      class="mt-12 w-full max-w-screen-md px-4 pb-4 pt-6 text-center text-sm text-on-surface-variant"
    >
      <p class="mb-1">&copy; {currentYear} Ayoub Abedrabbo. All rights reserved.</p>
      <p>
        Built with
        <a
          href="https://astro.build"
          target="_blank"
          rel="noopener"
          class="underline text-primary hover:text-on-primary-container transition-colors"
        >
          Astro
        </a>
        &amp;
        <a
          href="https://tailwindcss.com"
          target="_blank"
          rel="noopener"
          class="underline text-primary hover:text-on-primary-container transition-colors"
        >
          Tailwind CSS
        </a>.
      </p>
    </footer>

    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Person',
        name: 'Ayoub Abedrabbo',
        url: siteUrl,
        image: ayoubImageUrl,
        sameAs: [
          'https://instagram.com/alphabravomedia',
          'https://www.youtube.com/@ayoubthegreat',
          'https://youtube.com/@alphabravomedia',
          'https://www.youtube.com/@islamicTampaTV',
          'https://www.linkedin.com/in/ayoubabedrabbo/',
          'https://mastodon.social/@ayoubabedrabbo',
          'https://github.com/Today20092',
          'https://discordapp.com/users/279467079990640641',
          'https://t.me/AyoubAb1',
          'https://www.tiktok.com/@ayoubabedrabbo',
          'https://www.substack.com/@ayoubabedrabbo1',
          'https://matrix.to/#/@ayoubab:matrix.org',
        ],
        telephone: '+1-813-424-0606',
        email: 'Ayoub@AyoubAbed.xyz',
        contactPoint: {
          '@type': 'ContactPoint',
          telephone: '+1-813-424-0606',
          contactType: 'customer service',
          availableLanguage: ['English', 'Arabic']
        },
        jobTitle: 'Photographer & Videographer',
        address: {
          '@type': 'PostalAddress',
          addressLocality: 'Tampa',
          addressRegion: 'FL',
        },
      })}
    </script>
  </body>
</html>

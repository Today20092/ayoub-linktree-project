---
import '../styles.css'
import { Image } from 'astro:assets'

// Import the Icon component
import { Icon } from 'astro-icon/components'

import Link from '../components/Link.astro'
import Section from '../components/Section.astro'

// Images
import Ayoub from '../image/Ayoub.jpg'
import kofi from '../image/Ko-Fi.png'
import yt from '../image/youtube.png'
import cashapp from '../image/CashApp.png'
import venmo from '../image/Venmo.png'
import paypal from '../image/Paypal.png'
import contact from '../image/Contactcard.png'
import matrix from '../image/Matrix.png'
import tampashutter from '../image/Tampashutter.png'
import odysee from '../image/Odysee.png'
import actionlens from '../image/ActionLens.png'
import patreon from '../image/Patreon.png'
import sms from '../image/SMS.svg'
import signal from '../image/signal.svg'
import abm from '../image/ABM.webp'
import islamicTampaTVLogo from "../image/IslamicTampaTV Logo.png"

// Site Data
const siteUrl = 'https://www.ayoubabed.xyz/'
const ayoubImageUrl = Ayoub.src
const currentYear = new Date().getFullYear()

// Social Media Data Map
// FIX 1: Corrected names to remove the extra "fa-" prefix
const socialLinks = [
  {
    id: 'instagram',
    url: 'https://instagram.com/ayoubabedrabbo',
    icon: 'fa-brands:instagram', 
    label: 'Instagram: @ayoubabedrabbo'
  },
  {
    id: 'discord',
    url: 'https://discordapp.com/users/279467079990640641',
    icon: 'fa-brands:discord',
    label: 'Discord profile'
  },
  {
    id: 'linkedin',
    url: 'https://www.linkedin.com/in/ayoubabedrabbo/',
    icon: 'fa-brands:linkedin',
    label: 'LinkedIn'
  },
  {
    id: 'mastodon',
    url: 'https://mastodon.social/@ayoubabedrabbo',
    icon: 'fa-brands:mastodon',
    label: 'Mastodon',
    rel: 'me noopener noreferrer'
  },
  {
    id: 'github',
    url: 'https://github.com/Today20092',
    icon: 'fa-brands:github',
    label: 'GitHub'
  },
  {
    id: 'telegram',
    url: 'https://t.me/AyoubAb1',
    icon: 'fa-brands:telegram',
    label: 'Telegram'
  },
  {
    id: 'youtube',
    url: 'https://www.youtube.com/@ayoubthegreat',
    icon: 'fa-brands:youtube',
    label: 'YouTube channel'
  },
  {
    id: 'tiktok',
    url: 'https://www.tiktok.com/@ayoubabedrabbo',
    icon: 'fa-brands:tiktok',
    label: 'TikTok'
  }
]
---

<!doctype html>
<html lang="en" class="box-border">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <title>Ayoub Abedrabbo</title>
    <meta
      name="description"
      content="Ayoub Abedrabbo is an event photographer and videographer in Tampa, Florida. Photos and videos for all budgets. Find all links, contact, and support options here."
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta
      property="og:title"
      content="Ayoub Abedrabbo â€“ Photographer & Videographer"
    />
    <meta
      property="og:description"
      content="Tampa-based event photographer & videographer. Book or support me here."
    />
    <meta property="og:image" content={ayoubImageUrl} />
    <meta property="og:type" content="profile" />
    <meta property="og:url" content={siteUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="canonical" href={siteUrl} />
    <meta name="robots" content="index,follow" />

    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="preload" href="https://rsms.me/inter/inter.css" as="style" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
  </head>

  <body
    class="mx-auto my-8 min-h-screen max-w-[90%] justify-center
           bg-gradient-to-t from-emerald-800 to-green-700 pb-2
           text-center text-lg subpixel-antialiased lg:max-w-screen-md"
  >
    <div
      class="animate-float mx-auto size-40 overflow-hidden rounded-full drop-shadow-md"
    >
      <Image
        src={Ayoub}
        alt="Portrait of Ayoub Abedrabbo"
        class="h-44 w-full object-cover object-center drop-shadow-lg"
        decoding="async"
        loading="eager"
      />
    </div>

    <h1 class="my-4 text-2xl font-bold text-white drop-shadow-lg">
      Ayoub Abedrabbo
    </h1>
    <p class="mx-auto my-4 max-w-prose text-center text-white">
      Digital Media Specialist.<br>I create educational
      content about media production/videography and support the Islamic community through 
      local journalism.
    </p>

    <div
      class="my-4 flex flex-wrap items-center justify-center text-3xl text-white"
    >
      {socialLinks.map((social) => (
        <a
          id={social.id}
          target="_blank"
          rel={social.rel || "noopener noreferrer"}
          aria-label={social.label}
          class="mx-2 p-2 rounded transition hover:scale-150 focus-visible:ring-2 focus-visible:ring-white/70"
          href={social.url}
        >
          <Icon name={social.icon} class="h-8 w-8" aria-hidden="true" />
        </a>
      ))}
    </div>

    <Section title="Contact me">
      <Link
        linktxt="Download my contact card"
        bgcolor="bg-sky-500"
        link="https://www.ayoubabed.xyz/AyoubA-Contact-Card.vcf"
        linkcolor="text-white"
        id="contact"
        extraClasses="mt-0"
      >
        <Image
          slot="icon"
          src={contact}
          alt="Contact Card logo"
          class="link-image h-5 w-5 object-contain"
          loading="lazy"
          decoding="async"
        />
      </Link>

      <Link
        linktxt="Message me on Matrix"
        bgcolor="bg-sky-600"
        link="https://matrix.to/#/@ayoubab:matrix.org"
        linkcolor="text-white"
        id="matrix"
        extraClasses="mt-3"
      >
        <Image
          slot="icon"
          src={matrix}
          alt="Matrix logo"
          class="link-image h-5 w-5 object-contain"
          loading="lazy"
          decoding="async"
        />
      </Link>

      <Link
        linktxt="Send me a text"
        bgcolor="bg-sky-700"
        link="sms:+18134240606?body=Hello Ayoub from AlphaBravoMedia, It was nice to meet you."
        linkcolor="text-white"
        id="sms"
        extraClasses="mt-3"
      >
        <Image
          slot="icon"
          src={sms}
          alt=""
          class="link-image h-5 w-5 object-contain"
          loading="lazy"
          decoding="async"
        />
      </Link>

      <Link
        linktxt="Send me an email"
        bgcolor="bg-sky-800"
        link="mailto:Ayoub@AyoubAbed.xyz"
        linkcolor="text-white"
        id="email"
        extraClasses="mt-3"
      >
        <Icon
          slot="icon"
          name="fa-solid:envelope"
          class="h-5 w-5"
          aria-hidden="true"
        />
      </Link>

    </Section>

    
    <Section title="Watch on YouTube">
      <Link
        linktxt="Subscribe to my YouTube Channel"
        bgcolor="bg-red-700"
        link="https://www.youtube.com/@ayoubthegreat"
        linkcolor="text-white"
        id="youtube-personal"
        extraClasses="mt-0"
      >
        <Image
          slot="icon"
          src={yt}
          alt="YouTube logo"
          class="link-image h-5 w-5 object-contain"
          loading="lazy"
          decoding="async"
        />
      </Link>

      <Link
        linktxt="Visit AlphaBravoMedia YouTube Channel"
        bgcolor="bg-red-800"
        link="https://youtube.com/@alphabravomedia"
        linkcolor="text-white"
        id="youtube-alphabravomedia"
        extraClasses="mt-3"
      >
        <Image
          slot="icon"
          src={yt}
          alt="YouTube logo"
          class="link-image h-5 w-5 object-contain"
          loading="lazy"
          decoding="async"
        />
      </Link>

      <Link
        linktxt="Visit Islamic Tampa TV YouTube Channel"
        bgcolor="bg-red-900"
        link="https://www.youtube.com/@islamicTampaTV"
        linkcolor="text-white"
        id="youtube-alphabravomedia"
        extraClasses="mt-3"
      >
        <Image
          slot="icon"
          src={islamicTampaTVLogo}
          alt="YouTube logo"
          class="link-image h-5 w-5 object-contain"
          loading="lazy"
          decoding="async"
        />
      </Link>
    </Section>

    <Section
      title="My video & photo company"
      description="Event photography, videography, and media services for Tampa and beyond."
    >
      <Link
        linktxt="AlphaBravoMedia Homepage"
        bgcolor="bg-orange-700"
        link="https://linktr.ee/AlphaBravoMedia"
        linkcolor="text-white"
        id="alphabravomedia"
        extraClasses="mt-0"
      >
        <Image
          slot="icon"
          src={abm}
          alt="AlphaBravoMedia logo"
          class="link-image h-5 w-5 object-contain"
          loading="lazy"
          decoding="async"
        />
      </Link>
    </Section>

    <Section title="Send me money on:">
      <Link
        linktxt="CashApp"
        bgcolor="bg-green-700"
        link="https://cash.app/ayoubab1"
        linkcolor="text-white"
        id="cash-app"
        extraClasses="mt-0"
      >
        <Image
          slot="icon"
          src={cashapp}
          alt="Cash App logo"
          class="link-image h-5 w-5 object-contain"
          loading="lazy"
          decoding="async"
        />
      </Link>

      <Link
        linktxt="Venmo"
        bgcolor="bg-green-600"
        link="https://venmo.com/u/Ayoub-Abedrabbo"
        linkcolor="text-white"
        id="venmo"
        extraClasses="mt-3"
      >
        <Image
          slot="icon"
          src={venmo}
          alt="Venmo logo"
          class="link-image h-5 w-5 object-contain"
          loading="lazy"
          decoding="async"
        />
      </Link>

      <Link
        linktxt="Paypal"
        bgcolor="bg-green-500"
        link="https://paypal.me/AyoubAbedrabbo"
        linkcolor="text-white"
        id="paypal"
        extraClasses="mt-3"
      >
        <Image
          slot="icon"
          src={paypal}
          alt="PayPal logo"
          class="link-image h-5 w-5 object-contain"
          loading="lazy"
          decoding="async"
        />
      </Link>
    </Section>

    <footer
      class="mt-auto w-full max-w-screen-md px-4 pb-2 pt-4 text-center text-sm text-white/70"
    >
      <p class="mb-0">&copy; {currentYear} Ayoub Abedrabbo. All rights reserved.</p>
      <p>
        Built with
        <a
          href="https://astro.build"
          target="_blank"
          rel="noopener"
          class="underline hover:text-white"
        >
          Astro
        </a>
        &amp;
        <a
          href="https://tailwindcss.com"
          target="_blank"
          rel="noopener"
          class="underline hover:text-white"
        >
          Tailwind CSS
        </a>.
      </p>
    </footer>

    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Person',
        name: 'Ayoub Abedrabbo',
        url: siteUrl,
        image: ayoubImageUrl,
        sameAs: [
          'https://instagram.com/ayoubabedrabbo',
          'https://www.youtube.com/@ayoubthegreat',
          'https://www.linkedin.com/in/ayoubabedrabbo/',
          'https://mastodon.social/@ayoubabedrabbo',
        ],
        jobTitle: 'Photographer & Videographer',
        address: {
          '@type': 'PostalAddress',
          addressLocality: 'Tampa',
          addressRegion: 'FL',
        },
      })}
    </script>
  </body>
</html>
---
import '../styles.css'
import { Image } from 'astro:assets'

// Import the Icon component
import { Icon } from 'astro-icon/components'

import Link from '../components/Link.astro'
import Section from '../components/Section.astro'

// Images
import Ayoub from '../image/Ayoub.jpg'
import kofi from '../image/Ko-Fi.png'
import yt from '../image/youtube.png'
import cashapp from '../image/CashApp.png'
import venmo from '../image/Venmo.png'
import paypal from '../image/Paypal.png'
import contact from '../image/Contactcard.png'
import matrix from '../image/Matrix.png'
import tampashutter from '../image/Tampashutter.png'
import odysee from '../image/Odysee.png'
import actionlens from '../image/ActionLens.png'
import patreon from '../image/Patreon.png'
import sms from '../image/SMS.svg'
import signal from '../image/signal.svg'
import abm from '../image/ABM.webp'
import islamicTampaTVLogo from "../image/IslamicTampaTV Logo.png"

// Site Data
const siteUrl = 'https://www.ayoubabed.xyz/'
const ayoubImageUrl = Ayoub.src
const currentYear = new Date().getFullYear()

// Social Media Data Map
const socialLinks = [
  {
    id: 'instagram',
    url: 'https://instagram.com/ayoubabedrabbo',
    icon: 'fa-brands:instagram', 
    label: 'Instagram: @ayoubabedrabbo'
  },
  {
    id: 'discord',
    url: 'https://discordapp.com/users/279467079990640641',
    icon: 'fa-brands:discord',
    label: 'Discord profile'
  },
  {
    id: 'linkedin',
    url: 'https://www.linkedin.com/in/ayoubabedrabbo/',
    icon: 'fa-brands:linkedin',
    label: 'LinkedIn'
  },
  {
    id: 'mastodon',
    url: 'https://mastodon.social/@ayoubabedrabbo',
    icon: 'fa-brands:mastodon',
    label: 'Mastodon',
    rel: 'me noopener noreferrer'
  },
  {
    id: 'github',
    url: 'https://github.com/Today20092',
    icon: 'fa-brands:github',
    label: 'GitHub'
  },
  {
    id: 'telegram',
    url: 'https://t.me/AyoubAb1',
    icon: 'fa-brands:telegram',
    label: 'Telegram'
  },
  {
    id: 'youtube',
    url: 'https://www.youtube.com/@ayoubthegreat',
    icon: 'fa-brands:youtube',
    label: 'YouTube channel'
  },
  {
    id: 'tiktok',
    url: 'https://www.tiktok.com/@ayoubabedrabbo',
    icon: 'fa-brands:tiktok',
    label: 'TikTok'
  },
  {
    id: 'substack',
    url: 'https://www.substack.com/@ayoubabedrabbo1',
    icon: 'simple-icons:substack',
    label: 'Substack'
  }
]
---

<!doctype html>
<html lang="en" class="box-border">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <title>Ayoub Abedrabbo | Media Specialist</title>
    <meta
      name="description"
      content="Ayoub Abedrabbo is an event photographer and videographer in Tampa, Florida. Digital media specialist focusing on education and local journalism."
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta
      property="og:title"
      content="Ayoub Abedrabbo â€“ Photographer & Videographer"
    />
    <meta
      property="og:description"
      content="Tampa-based event photographer & videographer. Book or support me here."
    />
    <meta property="og:image" content={ayoubImageUrl} />
    <meta property="og:type" content="profile" />
    <meta property="og:url" content={siteUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="canonical" href={siteUrl} />
    <meta name="robots" content="index,follow" />

    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="preload" href="https://rsms.me/inter/inter.css" as="style" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
  </head>

  <body
    class="mx-auto min-h-screen max-w-full justify-center
           bg-gradient-to-br from-emerald-950 via-emerald-900 to-teal-950 pb-12 pt-12
           text-center text-lg subpixel-antialiased lg:max-w-screen-md"
  >
    <div
      class="animate-float mx-auto size-40 overflow-hidden rounded-full ring-4 ring-white/10 drop-shadow-2xl"
    >
      <Image
        src={Ayoub}
        alt="Portrait of Ayoub Abedrabbo"
        class="h-44 w-full object-cover object-center"
        decoding="async"
        loading="eager"
        fetchpriority="high"
      />
    </div>

    <h1 class="mt-6 text-3xl font-extrabold tracking-tight text-white drop-shadow-md">
      Ayoub Abedrabbo
    </h1>
    <p class="mx-auto mt-2 mb-6 max-w-prose px-6 text-center text-emerald-50/80">
      <span class="font-semibold text-white">Digital Media Specialist.</span><br>
      Creating educational media production content and <br class="hidden md:block"> supporting the Islamic community through local journalism.
    </p>

    <!-- Social Grid -->
    <div
      class="mb-8 flex flex-wrap items-center justify-center gap-2 px-4 text-3xl text-white/90"
    >
      {socialLinks.map((social) => (
        <a
          id={social.id}
          target="_blank"
          rel={social.rel || "noopener noreferrer"}
          aria-label={social.label}
          class="p-2 rounded-full transition-all duration-300 hover:scale-125 hover:bg-white/10 hover:text-white focus-visible:ring-2 focus-visible:ring-emerald-400"
          href={social.url}
        >
          <Icon name={social.icon} class="h-7 w-7" aria-hidden="true" />
        </a>
      ))}
    </div>

    <!-- Featured Newsletter Section -->
    <Section title="Read My Writing">
      <Link
        linktxt="Subscribe to my Substack"
        bgcolor="bg-[#FF6719]" 
        link="https://www.substack.com/@ayoubabedrabbo1"
        linkcolor="text-white"
        id="substack-featured"
        extraClasses="mt-0 font-bold shadow-lg shadow-orange-950/20"
      >
        <Icon
          slot="icon"
          name="simple-icons:substack"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>
    </Section>

    <Section title="Watch & Learn">
      <Link
        linktxt="My Personal Youtube Channel (Fun & Education)"
        bgcolor="bg-red-600"
        link="https://www.youtube.com/@ayoubthegreat"
        linkcolor="text-white"
        id="youtube-personal"
        extraClasses="mt-0"
      >
        <Icon
          slot="icon"
          name="fa-brands:youtube"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="AlphaBravoMedia (Production)"
        bgcolor="bg-red-700"
        link="https://youtube.com/@alphabravomedia"
        linkcolor="text-white"
        id="youtube-alphabravomedia"
        extraClasses="mt-3"
      >
        <Icon
          slot="icon"
          name="fa-brands:youtube"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Islamic Tampa TV (Journalism)"
        bgcolor="bg-red-800"
        link="https://www.youtube.com/@islamicTampaTV"
        linkcolor="text-white"
        id="youtube-islamic"
        extraClasses="mt-3"
      >
        <Icon
          slot="icon"
          name="fa-brands:youtube"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>
    </Section>

    <Section
      title="Hire Me"
      description="Professional photography & videography in Tampa."
    >
      <Link
        linktxt="AlphaBravoMedia Services"
        bgcolor="bg-orange-600"
        link="https://linktr.ee/AlphaBravoMedia"
        linkcolor="text-white"
        id="alphabravomedia"
        extraClasses="mt-0"
      >
        <Icon
          slot="icon"
          name="fa-solid:camera"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>
    </Section>

    <Section title="Contact & Networking">
      <Link
        linktxt="Download Contact Card"
        bgcolor="bg-sky-600"
        link="https://www.ayoubabed.xyz/AyoubA-Contact-Card.vcf"
        linkcolor="text-white"
        id="contact"
        extraClasses="mt-0"
      >
        <Icon
          slot="icon"
          name="fa-solid:id-card"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Message me on Matrix"
        bgcolor="bg-sky-700"
        link="https://matrix.to/#/@ayoubab:matrix.org"
        linkcolor="text-white"
        id="matrix"
        extraClasses="mt-3"
      >
        <Icon
          slot="icon"
          name="simple-icons:matrix"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Send a Text"
        bgcolor="bg-sky-800"
        link="sms:+18134240606?body=Hello Ayoub from AlphaBravoMedia, It was nice to meet you."
        linkcolor="text-white"
        id="sms"
        extraClasses="mt-3"
      >
        <Icon
          slot="icon"
          name="fa-solid:comment-dots"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Email Me"
        bgcolor="bg-sky-900"
        link="mailto:Ayoub@AyoubAbed.xyz"
        linkcolor="text-white"
        id="email"
        extraClasses="mt-3"
      >
        <Icon
          slot="icon"
          name="fa-solid:envelope"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>
    </Section>

    <Section title="Support My Work">
      <Link
        linktxt="CashApp"
        bgcolor="bg-emerald-700"
        link="https://cash.app/ayoubab1"
        linkcolor="text-white"
        id="cash-app"
        extraClasses="mt-0"
      >
        <Icon
          slot="icon"
          name="simple-icons:cashapp"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Venmo"
        bgcolor="bg-emerald-600"
        link="https://venmo.com/u/Ayoub-Abedrabbo"
        linkcolor="text-white"
        id="venmo"
        extraClasses="mt-3"
      >
        <Icon
          slot="icon"
          name="simple-icons:venmo"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>

      <Link
        linktxt="Paypal"
        bgcolor="bg-emerald-500"
        link="https://paypal.me/AyoubAbedrabbo"
        linkcolor="text-white"
        id="paypal"
        extraClasses="mt-3"
      >
        <Icon
          slot="icon"
          name="fa-brands:paypal"
          class="h-6 w-6"
          aria-hidden="true"
        />
      </Link>
    </Section>

    <footer
      class="mt-12 w-full max-w-screen-md px-4 pb-8 pt-4 text-center text-sm text-white/50"
    >
      <p class="mb-2 font-medium">&copy; {currentYear} Ayoub Abedrabbo. All rights reserved.</p>
      <p>
        Built with
        <a
          href="https://astro.build"
          target="_blank"
          rel="noopener"
          class="underline decoration-emerald-500/30 hover:text-white hover:decoration-emerald-500"
        >
          Astro
        </a>
        &amp;
        <a
          href="https://tailwindcss.com"
          target="_blank"
          rel="noopener"
          class="underline decoration-emerald-500/30 hover:text-white hover:decoration-emerald-500"
        >
          Tailwind CSS
        </a>.
      </p>
    </footer>

    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Person',
        name: 'Ayoub Abedrabbo',
        url: siteUrl,
        image: ayoubImageUrl,
        sameAs: [
          'https://instagram.com/ayoubabedrabbo',
          'https://www.youtube.com/@ayoubthegreat',
          'https://www.linkedin.com/in/ayoubabedrabbo/',
          'https://mastodon.social/@ayoubabedrabbo',
        ],
        jobTitle: 'Photographer & Videographer',
        address: {
          '@type': 'PostalAddress',
          addressLocality: 'Tampa',
          addressRegion: 'FL',
        },
      })}
    </script>
  </body>
</html>
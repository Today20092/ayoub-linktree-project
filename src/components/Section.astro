---
type SectionProps = {
  title: string
  description?: string
  class?: string
}

const { title, description, class: className } = Astro.props as SectionProps
---

<section class:list={['mt-10', className]}>
  <h2
    class="mb-5 text-lg font-semibold tracking-wide text-on-surface"
  >
    {title}
  </h2>

  {description && (
    <p class="mx-auto mb-4 max-w-prose text-sm text-on-surface-variant">
      {description}
    </p>
  )}

  <div class="flex flex-col items-center gap-3">
    <slot />
  </div>
</section>
